<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Colors="clr-namespace:AppReplica.ReplicatedUI.WhatsApp.Styles"
             mc:Ignorable="d"
             x:Class="AppReplica.MainPage">

    <StackLayout
        Spacing="2">
        <!-- Place new controls here -->
        <Label Text="HelveticaNeu-Light" 
           HorizontalOptions="Center"

           FontFamily="{StaticResource WhatsAppHelveticaNeuLight}"

               />

        <Label Text="HelveticaNeu-Thin" 
           HorizontalOptions="Center"
           TextColor="{StaticResource BarBackgroundColor}" 
           FontFamily="{StaticResource WhatsAppHelveticaNeuThin}"
               />

        <Label Text="HelveticaNeu-Medium" 
           HorizontalOptions="Center"

           FontFamily="{StaticResource WhatsAppHelveticaNeuMedium}"
               
               />

        <Label Text="HelveticaNeu-Bold" 
           HorizontalOptions="Center"
           TextColor="{StaticResource BarBackgroundColor }" 
           FontFamily="{StaticResource WhatsAppHelveticaBold}"
           FontSize="Title"
               />


    </StackLayout>

</ContentPage>
